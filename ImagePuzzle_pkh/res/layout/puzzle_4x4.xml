<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inner_content4x4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/puzzle_bg"
    android:orientation="vertical" >
     <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_head_bg" >

            <Button
                android:id="@+id/home_btn_4x4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/home_button" />

            <Button
                android:id="@+id/slider_4x4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/logout_button"
                android:text=" " />

            <TextView
                android:id="@+id/nameText_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="CowBoy"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical" >

        

        <TableRow
            android:id="@+id/table1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img1_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/img2_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/img3_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_launcher" />
             <ImageView
                android:id="@+id/img4_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_launcher" />
        </TableRow>

        <TableRow
            android:id="@+id/table2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img5_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/img6_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_launcher" />
             <ImageView
                android:id="@+id/img7_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_launcher" />
              <ImageView
                android:id="@+id/img8_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_launcher" />
        </TableRow>

        <TableRow
            android:id="@+id/table3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

             <ImageView
                android:id="@+id/img9_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginRight="1dp"
                
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/img10_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginRight="1dp"
                
                android:src="@drawable/ic_launcher" />
             <ImageView
                android:id="@+id/img11_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher" />
              <ImageView
                android:id="@+id/img12_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="1dp"
                
                android:src="@drawable/ic_launcher" />
        </TableRow>
        <TableRow
            android:id="@+id/table3_4x4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

             <ImageView
                android:id="@+id/img13_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/img14_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_launcher" />
             <ImageView
                android:id="@+id/img15_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_launcher" />
              <ImageView
                android:id="@+id/img16_4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_launcher" />
        </TableRow>
    </LinearLayout>
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" >

          
        
        <TextView
            android:id="@+id/moves_taken_4x4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move:__"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        

        <Button
            android:id="@+id/go_start_4x4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/refresh_btn_file" />

        <ImageView
            android:id="@+id/mute_4x4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/unmute_" />

       
    </TableRow>

</RelativeLayout>