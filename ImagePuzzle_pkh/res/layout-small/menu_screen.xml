<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MenuScreen" >

    <ImageView
        android:id="@+id/imgview_tuxpuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tuxpuz_txt_hor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/start_btn_menu_screen"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/setaswallpaper_file"
            android:shadowColor="#062001"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="START"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/mute_btn_menu_screen"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/setaswallpaper_file"
            android:shadowColor="#062001"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="SOUND OFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/help_btn_menu_screen"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/setaswallpaper_file"
            android:shadowColor="#062001"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:text="HELP"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>